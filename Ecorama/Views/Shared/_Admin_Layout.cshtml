<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Ecorama</title>
	<!-- Custom fonts for this template-->
	<link href="~/Admin/css/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

	<link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
		  rel="stylesheet">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

	<!-- Custom styles for this template-->
	<link href="~/Admin/css/css/sb-admin-2.min.css" rel="stylesheet">

	@await RenderSectionAsync("Style", required: false)



	<style>
		html, body {
			height: 100%;
			margin: 0;
		}

		#wrapper {
			display: flex;
			min-height: 100vh;
		}

		.sidebar {
			width: 250px;
			background-color: #343a40;
			color: white;
			padding: 20px 0;
			flex-shrink: 0;
		}

			.sidebar a {
				color: white;
				text-decoration: none;
				padding: 10px 20px;
				display: block;
			}

				.sidebar a:hover {
					background-color: #495057;
				}

		.main-content {
			flex-grow: 1;
			display: flex;
			flex-direction: column;
		}

		main {
			flex-grow: 1;
			padding: 20px;
		}

		footer {
			background-color: #f8f9fa;
			padding: 10px 0;
		}

	</style>


</head>
<body>


	<div id="wrapper">

		<!-- Sidebar -->
		<div class="sidebar">
			<a class="sidebar-brand d-flex align-items-center justify-content-center" href="@Url.Action("Index","Admin")">

				<div class="sidebar-brand-text mx-3">Ecorama</div>
			</a>			
			<a href="@Url.Action("Index","Admin")">Dashboard</a>
			<a href="@Url.Action("ViewAllUsers", "Admin")">Users</a>
			<a href="@Url.Action("seeAllWorkShop","Admin")">WorkShops</a>
			<a href="#">Courses</a>
			<a href="#">Reports</a>
			<div class="dropdown">
				<a class="dropdown-toggle d-block px-3 py-2 text-white" href="#" data-bs-toggle="collapse" data-bs-target="#workshopsMenu" aria-expanded="false">
					Manage Home Page
				</a>
				<div class="collapse" id="workshopsMenu">
					<a href="@Url.Action("Index", "Slider")" class="d-block px-4 py-1 text-white">Sider</a>
					<a href="@Url.Action("AddAboutUs", "Home")" class="d-block px-4 py-1 text-white">AboutUs</a>
					<a href="@Url.Action("Index", "Social")" class="d-block px-4 py-1 text-white">SocialMedia</a>
				</div>
			</div>
			<a href="#">Logout</a>
		</div>
		<!-- End of Sidebar -->
		<!-- Main Content -->
		<div class="main-content">
			<main role="main" class="pb-3">
				@RenderBody()
			</main>

			<!-- Footer -->
			<footer class="bg-white text-center">
				<div class="container my-auto">
					<div class="copyright my-auto">
						<span>&copy; Orange Coding Academy 2025</span>
					</div>
				</div>
			</footer>
		</div>

	</div>
	<!-- End of Footer -->

	<!-- Bootstrap core JavaScript-->

	<script src="~/Admin/css/vendor/jquery/jquery.min.js"></script>
	<script src="~/Admin/css/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

	<!-- Core plugin JavaScript-->
	<script src="~/Admin/css/vendor/jquery-easing/jquery.easing.min.js"></script>

	<!-- Custom scripts for all pages-->
	<script src="~/Admin/js/demo/sb-admin-2.min.js"></script>

	<!-- Page level plugins -->
	<script src="~/Admin/css/vendor/chart.js/Chart.min.js"></script>

	<!-- Page level custom scripts -->
	<script src="~/Admin/js/demo/chart-area-demo.js"></script>
	<script src="~/Admin/js/demo/chart-pie-demo.js"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
