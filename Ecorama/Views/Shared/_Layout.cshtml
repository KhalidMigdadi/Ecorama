<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Ecorama</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Ecorama.styles.css" asp-append-version="true" />
	<!-- MDB CSS -->
	<link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.0/mdb.min.css" rel="stylesheet" />

	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">


	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@200;300;400;500;700;800;900&display=swap" rel="stylesheet">



</head>
@await RenderSectionAsync("Style", required: false)
<style>
	.btn-gradient-custom {
		background: linear-gradient(to right, #00c6ff, #0072ff);
		color: white !important;
		border-radius: 30px;
		transition: all 0.3s ease;
		border: none;
	}

		.btn-gradient-custom:hover {
			background: linear-gradient(to right, #0072ff, #00c6ff);
			color: white;
			transform: scale(1.05);
		}

	<style >
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
		font-family: 'Tajawal', sans-serif;
	}

	body {
		direction: rtl;
		text-align: right;
		color: #333;
		background-color: #f9f9f9;
		overflow-x: hidden;
	}

	.container {
		width: 100%;
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 20px;
	}

	/* Header styles */
	header {
		background-color: #fff;
		position: fixed;
		width: 100%;
		top: 0;
		z-index: 1000;
		box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
		transition: all 0.3s ease;
	}

		header.scrolled {
			background-color: rgba(255, 255, 255, 0.95);
			padding: 5px 0;
		}

	.navbar {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 15px 0;
	}

	.logo {
		font-size: 24px;
		font-weight: 700;
		color: #063b5c;
		text-decoration: none;
		display: flex;
		align-items: center;
	}

		.logo i {
			margin-left: 10px;
			color: #ff6b3d;
		}

	.nav-links {
		display: flex;
		list-style: none;
	}

		.nav-links li {
			margin-right: 20px;
		}

		.nav-links a {
			text-decoration: none;
			color: #2a2c41;
			font-weight: 500;
			transition: all 0.3s ease;
			position: relative;
		}

			.nav-links a:hover {
				color: #15a1cf;
			}

			.nav-links a::after {
				content: '';
				position: absolute;
				width: 0;
				height: 2px;
				bottom: -5px;
				right: 0;
				background-color: #15a1cf;
				transition: all 0.3s ease;
			}

			.nav-links a:hover::after {
				width: 100%;
			}

	.auth-buttons a {
		padding: 8px 20px;
		border-radius: 5px;
		text-decoration: none;
		font-weight: 500;
		transition: all 0.3s ease;
	}

	.login-btn {
		color: #063b5c;
		margin-left: 10px;
	}

	.signup-btn {
		background-color: #063b5c;
		color: #fff !important;
	}

		.signup-btn:hover {
			background-color: #15a1cf;
		}

	.hamburger {
		display: none;
		cursor: pointer;
		flex-direction: column;
		justify-content: space-between;
		width: 30px;
		height: 21px;
	}

		.hamburger span {
			display: block;
			height: 3px;
			width: 100%;
			background-color: #063b5c;
			transition: all 0.3s ease;
		}



	/* Footer */
	footer {
		background-color: #1e1e1e; /* var(--dark-color) */
		color: white;
		padding-top: 60px;
	}

	.footer-content {
		display: flex;
		flex-wrap: wrap;
		justify-content: space-between;
		gap: 40px;
		margin-bottom: 40px;
	}

	.footer-column {
		flex: 1;
		min-width: 250px;
	}

	.footer-logo {
		font-size: 24px;
		font-weight: 700;
		color: white;
		text-decoration: none;
		display: flex;
		align-items: center;
		margin-bottom: 20px;
	}

		.footer-logo i {
			margin-left: 10px;
			color: #ff6b35; /* var(--accent-color) */
		}

	.footer-about p {
		line-height: 1.7;
		margin-bottom: 20px;
	}

	.social-links {
		display: flex;
	}

		.social-links a {
			display: inline-flex;
			justify-content: center;
			align-items: center;
			width: 36px;
			height: 36px;
			background-color: rgba(255, 255, 255, 0.1);
			color: white;
			border-radius: 50%;
			margin-left: 10px;
			transition: 0.3s ease;
		}

			.social-links a:hover {
				background-color: #ff6b35;
				transform: translateY(-3px);
			}

	.footer-title {
		font-size: 18px;
		margin-bottom: 20px;
		position: relative;
		padding-bottom: 10px;
	}

		.footer-title::after {
			content: '';
			position: absolute;
			right: 0;
			bottom: 0;
			width: 50px;
			height: 2px;
			background-color: #ff6b35;
		}

	.footer-links {
		list-style: none;
	}

		.footer-links li {
			margin-bottom: 12px;
		}

		.footer-links a {
			color: #ccc;
			text-decoration: none;
			transition: 0.3s ease;
			display: flex;
			align-items: center;
		}

			.footer-links a:hover {
				color: white;
				padding-right: 8px;
			}

			.footer-links a i {
				margin-left: 8px;
				font-size: 12px;
				color: #ff6b35;
			}

	.contact-info {
		list-style: none;
	}

		.contact-info li {
			display: flex;
			align-items: flex-start;
			margin-bottom: 15px;
		}

		.contact-info i {
			margin-left: 10px;
			color: #ff6b35;
			margin-top: 5px;
		}

	.newsletter form {
		display: flex;
		margin-top: 20px;
	}

	.newsletter input {
		flex: 1;
		padding: 12px;
		border: none;
		border-radius: 5px 0 0 5px;
		font-family: 'Tajawal', sans-serif;
	}

	.newsletter button {
		background-color: #ff6b35;
		color: white;
		border: none;
		padding: 12px 15px;
		border-radius: 0 5px 5px 0;
		cursor: pointer;
		transition: 0.3s ease;
	}

		.newsletter button:hover {
			background-color: #e55a2e;
		}

	.footer-bottom {
		text-align: center;
		padding: 20px 0;
		border-top: 1px solid rgba(255, 255, 255, 0.1);
		font-size: 14px;
		color: #ccc;
	}

</style>

<body>
	<!-- Navbar -->
	<header>
		<div class="container">
			<nav class="navbar">
				<a href="#" class="logo"><i class="fas fa-graduation-cap"></i>إيكوراما</a>
				<ul class="nav-links">
					<li><a href="#">الرئيسية</a></li>
					<li><a href="#">الورشات</a></li>
					<li><a href="#">الكورسات</a></li>
