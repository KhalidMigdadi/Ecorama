<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Ecorama</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Ecorama.styles.css" asp-append-version="true" />
    <!-- MDB CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.0/mdb.min.css" rel="stylesheet" />

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">



</head>
@await RenderSectionAsync("Style", required: false)
<style>
	.btn-gradient-custom {
		background: linear-gradient(to right, #00c6ff, #0072ff);
		color: white !important;
		border-radius: 30px;
		transition: all 0.3s ease;
		border: none;
	}

		.btn-gradient-custom:hover {
			background: linear-gradient(to right, #0072ff, #00c6ff);
			color: white;
			transform: scale(1.05);
		}
</style>

<body>
	<!-- Navbar -->
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow">
		<div class="container">
			<a class="navbar-brand fw-bold text-uppercase" href="#">Ecorama</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse justify-content-between" id="navbarNav">
				<ul class="navbar-nav">
					<li class="nav-item"><a class="nav-link active" href="#">الرئيسية</a></li>
					<li class="nav-item"><a class="nav-link" href="#">الورشات</a></li>
					<li class="nav-item"><a class="nav-link" href="#">من نحن</a></li>
					<li class="nav-item"><a class="nav-link" href="#">اتصل بنا</a></li>
				</ul>
				<a href="/Account/Login" class="btn btn-gradient-custom px-4 py-2 fw-bold">تسجيل الدخول</a>
			</div>
		</div>
	</nav>
	<main role="main" class="pb-3">
		@RenderBody()
	</main>
    <footer class="bg-body-tertiary text-center">
        <!-- Grid container -->
        <div class="container p-4 pb-0">
            <!-- Section: Social media -->

			<section class="mb-4">
				@if (ViewBag.SocialLinks != null)
				{
					foreach (var link in ViewBag.SocialLinks as List<SocialMediaLink>)
					{
						<a class="btn text-white btn-floating m-1"
						   style="background-color: @link.IconColor;"
						   href="@link.Url"
						   role="button">
							<i class="@link.IconClass"></i>
						</a>
					}
				}

			</section>
			<!-- Section: Social media -->

        </div>
        <!-- Grid container -->
        <!-- Copyright -->
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.05);">
            © 2020 Copyright:
            <a class="text-body" href="https://mdbootstrap.com/">MDBootstrap.com</a>
        </div>
        <!-- Copyright -->
    </footer>
    <!-- MDB JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.0/mdb.min.js"></script>


	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
