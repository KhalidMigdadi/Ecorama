@model Ecorama.Models.SocialMediaLink

@{
    ViewData["Title"] = "تعديل رابط شبكة اجتماعية";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";

}

<div class="container-fluid">
    <h2>تعديل رابط شبكة اجتماعية</h2>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="EditSocial">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedAt" />

                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label">اسم الشبكة الاجتماعية</label>
                    <select asp-for="Name" class="form-control">
                        <option value="Facebook">Facebook</option>
                        <option value="Twitter">Twitter</option>
                        <option value="Google">Google</option>
                        <option value="Instagram">Instagram</option>
                        <option value="LinkedIn">LinkedIn</option>
                        <option value="GitHub">GitHub</option>
                    </select>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="IconClass" class="control-label">فئة الأيقونة</label>
                    <input asp-for="IconClass" class="form-control" placeholder="مثال: fab fa-facebook-f" />
                    <span asp-validation-for="IconClass" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Url" class="control-label">الرابط</label>
                    <input asp-for="Url" class="form-control" placeholder="https://..." />
                    <span asp-validation-for="Url" class="text-danger"></span>
                </div>

                <div class="form-group form-check mb-3">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label asp-for="IsActive" class="form-check-label">نشط</label>
                </div>

                <div class="form-group mb-3">
                    <input type="submit" value="حفظ" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">عودة إلى القائمة</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}