@model Ecorama.Models.SocialMediaLink

@{
    ViewData["Title"] = "Create Social Media Link";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";

}

<h2>@ViewData["Title"]</h2>

<form asp-action="CreateSocial" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="IconClass" class="form-label"></label>
        <input asp-for="IconClass" class="form-control" />
        <span asp-validation-for="IconClass" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="IconColor" class="form-label">Icon Color</label>
        <input asp-for="IconColor" class="form-control" type="color" />
        <span asp-validation-for="IconColor" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Url" class="form-label">URL</label>
        <input asp-for="Url" class="form-control" />
        <span asp-validation-for="Url" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="IsActive" class="form-check-label">Is Active</label>
        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
